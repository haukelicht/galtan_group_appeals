	author = {Osnabrügge, Moritz and Hobolt, Sara B. and Rodon, Toni},
	urldate = {2021-10-19},
	date = {2021-08},
	langid = {english},
}

@article{schwalbach_going_2022,
	title = {Going in circles? The influence of the electoral cycle on the party behaviour in parliament},
